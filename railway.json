{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "gunicorn --bind 0.0.0.0:${PORT:-8000} app:app",
    "restartPolicyType": "on_failure",
    "restartPolicyMaxRetries": 5
  },
  "services": {
    "web": {
      "public": true
    }
  }
}
